@model IEnumerable<project.ViewModels.HangHoaVM>



@foreach (var item in Model)
{
    var tenRutGon=item.TenHangHoa;
    if (!string.IsNullOrEmpty(tenRutGon) && tenRutGon.Length > 20)
    {
        tenRutGon = tenRutGon.Substring(0, 20) + "...";
    }
    <div class="col-lg-3 col-md-6 d-flex mb-4">
        <!-- Thêm mb-4 để tạo khoảng cách giữa các hàng -->
        <div class="position-relative fruite-item h-100 d-flex flex-column">
            <div class="fruite-img">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.Slug">
                    <img src="~/Hinh/HangHoa/@item.HinhAnh" class="img-fluid w-100 rounded-top" alt="@item.TenHangHoa" style="height: 250px; object-fit: cover;"> 
                    </a>
            </div>
            <div class="text-white bg-secondary px-3 py-1 rounded border-0 position-absolute" style="top: 10px; left: 10px;">@item.TenLoai</div>

            <div class="p-4 d-flex flex-column flex-grow-1">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.Slug">
                    <h5>@tenRutGon</h5>
                </a>

                <p>@item.MoTa</p>

                <div class="d-flex justify-content-between flex-lg-wrap align-items-center mt-auto">
                    <p class="text-dark fs-6 fw-bold mb-0">$@item.DonGia / kg</p> 
                    <a asp-action="AddToCart" asp-controller="Card" asp-route-id="@item.MaHangHoa" class="fs-6 px-3 text-primary btn-link">
                        <i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ
                    </a>
                </div>
            </div>
        </div>
    </div>
}

                    