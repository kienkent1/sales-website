
<div class="dropdown me-3">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {

        var avatarFileName = User.FindFirst("Avatar")?.Value;

        // Thẻ <a> bao bọc avatar hoặc icon mặc định
        <a class="dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false" href="#" role="button">

            @if (!string.IsNullOrEmpty(avatarFileName))
            {
                <img src="~/Hinh/KhachHang/@avatarFileName" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%;" />
            }
            else
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                </svg>
            }
        </a>

        <ul class="dropdown-menu dropdown-menu-end p-2">
            <li>
                <a class="dropdown-item" asp-controller="KhachHang" asp-action="Profile">
                    <i class="fas fa-user me-2"></i>Thông tin cá nhân
                </a>
            </li>
            <li>
                <form asp-controller="KhachHang" asp-action="DangXuat" method="post" id="logoutForm">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    }
    else
    {

        <a class="dropdown-toggle d-flex align-items-center " data-bs-toggle="dropdown" aria-expanded="false" href="#" role="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
            </svg>
        </a>

        <ul class="dropdown-menu dropdown-menu-end p-2">
            <li>
                <a class="dropdown-item" asp-controller="KhachHang" asp-action="DangNhap">
                    <i class="fas fa-sign-in-alt me-2" ></i>Đăng nhập
                </a>
            </li>
        </ul>
    }
</div>