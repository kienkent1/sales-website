@model IEnumerable<project.ViewModels.MenuLoai>
@{
    var DSCty = ViewBag.DSCty as IEnumerable<project.Data.NhaCungCap>;
    var currentLoai = ViewData["CurrentLoai"] as string;
    var currentBrand = ViewData["CurrentNCC"] as string;
}

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh Mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                <div class="d-flex justify-content-between fruite-name">

                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.slug">
                            >
                            <img src="~/Hinh/Loai/@item.Hinh" class="rounded-circle"  style="width: 25px; height: 25px; object-fit: cover;">
                            @item.TenLoai
                    </a>

                        <span>(@item.SoLuong)</span>
                </div>
    
            </li>
           
            }

            
            
        </ul>
    </div>
</div>
<div class="col-lg-12">
    <div class="mb-3">
        <h4 class="mb-2">Price</h4>
        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
        <output id="amount" name="amount" min-velue="0" max-value="500" for="rangeInput">0</output>
    </div>
</div>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Hãng</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in DSCty)
            {
                <li class="mb-3 ">
                    <a asp-controller="HangHoa" asp-action="Index" asp-route-brand="@item.Slug"  asp-route-Loai="@currentLoai" class="d-flex justify-content-center align-items-center p-2 border rounded-3 logo-Cty">

                        <img src="~/Hinh/NhaCC/@item.Logo" alt="Logo @item.TenCongTy" style="height: 40px; width: auto; object-fit: contain;">

                    </a>
                </li>
            }
        </ul>
    </div>
</div>