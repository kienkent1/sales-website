
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    if (currentController == "HangHoa")
    {
        currentController = "Shop";
    }
    else if (currentController == "Card")
    {
        currentController = "Giỏ hàng";
    }
    else
    {
         currentController = "Liên hệ";
    }
    
}

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Contact</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a href="https://www.facebook.com/profile.php?id=61574736917421&locale=vi_VN">Pages</a></li>
        <li class="breadcrumb-item active text-white">@currentController</li>
    </ol>
</div>