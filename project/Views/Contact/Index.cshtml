@model project.ViewModels.ContactVM
@{
    ViewData["Title"] = "Liên hệ";
}



<!-- Single Page Header start -->
@await Html.PartialAsync("SinglePage")
<!-- Single Page Header End -->
<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Liên lạc tại</h1>
                        <p class="mb-4">Nếu bạn có thắc mắc gì xin hãy liên hệ chúng tôi, Xin chân thành cảm ơn!</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">  
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3917.3397244218227!2d106.83234577509094!3d10.937689789221048!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174dffcc5ecddb9%3A0xc8971ea2ed8e08a1!2zVHLGsOG7nW5nIENhbyDEkeG6s25nIEZQVCBQb2x5dGVjaG5pYyBjxqEgc-G7nyDEkOG7k25nIE5haQ!5e0!3m2!1svi!2s!4v1752241395564!5m2!1svi!2s"
                                class="rounded w-100" style="height: 400px;" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-7">

                    <form asp-controller="Contact" asp-action="Index" method="post">
                        
                        <div class="col-md-12 d-flex flex-column justify-content-center">
                            <div class="  d-flex gap-3">
                                
                                    <div class="col-md-11 ">

                                    @* Hiển thị thông báo thành công hoặc lỗi từ Controller *@
                                    @if (ViewBag.SuccessMessage != null)
                                    {
                                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                                    }
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                    }

                                    @* Tên : *@
                                    <div class="form-item mb-4 ">
                                        <input asp-for="@Model.HoTen" class="form-control border-0 py-3"  placeholder="Nhập  Tên">
                                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                                    </div>

                                    @* Email *@
                                    <div class="form-item mb-4">
                                        <input asp-for="@Model.Email" type="text" class="form-control border-0 py-3" placeholder="Nhập  Email" >
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>

                                    @* So dien thoai *@
                                    <div class="form-item mb-4">
                                        <input asp-for="@Model.DienThoai" type="text" class="form-control border-0 py-3" placeholder="Nhập  Số điện thoại" >
                                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                                    </div>

                                   
                                    @* noi dung *@
                                    <div class="form-item mb-4">
                                        <textarea asp-for="@Model.NoiDung" type="text" class="form-control border-0 py-3"  placeholder="Nhập  Nội dung"></textarea>
                                        <span asp-validation-for="@Model.NoiDung" class="text-danger"></span>
                                    </div>
                                    <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Xác nhận</button>

                                </div>
                                
                                   </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">Phường An Bình, Biên Hòa, Đồng Nai</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email</h4>
                            <p class="mb-2">kienpxtb00438@fpt.edu.vn</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Số điện thoại</h4>
                            <p class="mb-2">(+84)0813544739</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
